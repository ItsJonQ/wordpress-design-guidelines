{
	"name": "wordpress-design-guidelines",
	"description": "WordPress Design Guidelines",
	"version": "1.0.0",
	"author": "Jon Quach <hello@jonquach.com> (https://www.jonquach.com/)",
	"repository": "https://github.com/itsjonq/wordpress-design-guidelines",
	"scripts": {
		"start": "npm run develop",
		"build": "gatsby build",
		"develop": "gatsby develop --open --port 5800",
		"deploy:prod": "npm run deploy:production",
		"deploy:production": "npm run build && netlify deploy --prod",
		"deploy:staging": "npm run build && netlify deploy",
		"deploy": "npm run deploy:staging",
		"lint": "eslint src/**/*.js",
		"format:js": "npm run lint -- --fix",
		"story": "npm run storybook",
		"storybook": "start-storybook -p 5801",
		"storybook:build": "build-storybook"
	},
	"dependencies": {
		"@hot-loader/react-dom": "16.9.0",
		"@mdx-js/mdx": "^1.0.21",
		"@mdx-js/react": "^1.0.21",
		"@wordpress/eslint-plugin": "2.4.0",
		"babel-plugin-styled-components": "^1.10.6",
		"change-case": "3.1.0",
		"classnames": "2.2.6",
		"color": "3.1.2",
		"copy-to-clipboard": "3.2.0",
		"core-js": "^2.5.7",
		"eslint": "6.5.1",
		"gatsby": "^2.12.0",
		"gatsby-image": "^2.2.3",
		"gatsby-link": "^2.2.0",
		"gatsby-mdx": "^0.6.3",
		"gatsby-plugin-catch-links": "^2.1.0",
		"gatsby-plugin-manifest": "^2.2.0",
		"gatsby-plugin-offline": "^2.2.0",
		"gatsby-plugin-react-helmet": "^3.1.0",
		"gatsby-plugin-sharp": "^2.2.1",
		"gatsby-plugin-styled-components": "^3.1.0",
		"gatsby-remark-autolink-headers": "2.1.13",
		"gatsby-remark-copy-linked-files": "^2.1.0",
		"gatsby-remark-images": "^3.1.2",
		"gatsby-remark-prismjs": "^3.3.0",
		"gatsby-source-filesystem": "^2.1.1",
		"gatsby-transformer-remark": "^2.5.0",
		"gatsby-transformer-sharp": "^2.2.0",
		"lodash": "4.17.15",
		"netlify-cli": "2.15.0",
		"pluralize": "8.0.0",
		"prismjs": "^1.16.0",
		"react": "^16.10.1",
		"react-dom": "^16.10.1",
		"react-helmet": "~5.2.1",
		"react-spring": "8.0.27",
		"react-youtube": "^7.9.0",
		"scroll-into-view-if-needed": "2.2.20",
		"styled-components": "^4.3.2",
		"styled-system": "5.1.2",
		"to-style": "1.3.3"
	},
	"keywords": [
		"wordpress",
		"design",
		"guidelines",
		"system"
	],
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{json,md}": [
			"prettier --write",
			"git add"
		],
		"**/*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"git add"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.6.2",
		"@storybook/addon-actions": "^5.2.3",
		"@storybook/addon-links": "^5.2.3",
		"@storybook/addons": "^5.2.3",
		"@storybook/react": "^5.2.3",
		"babel-loader": "^8.0.6",
		"husky": "3.0.8",
		"lint-staged": "9.4.1"
	}
}
